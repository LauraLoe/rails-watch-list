<div class="banner" style="background-image: url(<%= cl_image_path @list.photo.key, height: 600, crop: :fill %>)">
  <h2> <%= @list.name %> </h2>
</div>
<div class="container">
  <div class="button">
    <%= link_to "Add new movie", bookmark_path %>
    <%# #new_bookmark_path %>
  </div>
  <div class="card-container-movie">
      <% @list.movies.each do |movie| %>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <div class="card-movie">
          <%= image_tag movie.poster_url, alt: "movie_image", width: 200 %>
          <div class="movie-info">
            <div class="info-header">
              <div class="title">
                <%= movie.title %>
              </div>
              <div class="rating">
                â€¢ <%= movie.rating %>
                <i class="fa-solid fa-star"></i>
              </div>
            </div>
            <div class="overview">
              <%= movie.overview %>
            </div>
            <div class="info-footer">
              <i class="fa-sharp fa-solid fa-quote-left"></i>
              <%= bookmark.comment %>
              <div id="spacer" style="width: 200px; height: 25px; margin-right:0px;"></div>
              <%= link_to "Delete movie", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list?" } %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>


