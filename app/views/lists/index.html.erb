<div class="banner">
  <h2>Sort your favourite movies</h2>
</div>

<div class="container">
  <h4>My Lists</h4>
  <div class="card-container">
    <% @lists.each do |list| %>
      <div class="card" style="background-image: url(<%= cl_image_path list.photo.key, height: 400, crop: :fill %>);">
         <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>


